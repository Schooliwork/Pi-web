<!doctype html>
<html lang="en">

<head>
    <title>Schooli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="{{ asset ('https://fonts.googleapis.com/css?family=DM+Sans:300,400,700|Indie+Flower')}}" rel="stylesheet">


    <link rel="stylesheet" href="{{ asset ('fonts/icomoon/style.css')}}">

    <link rel="stylesheet" href="{{ asset ('css/bootstrap.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/bootstrap-datepicker.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/jquery.fancybox.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/owl.carousel.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/owl.theme.default.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('fonts/flaticon/font/flaticon.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/aos.css')}}">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="{{ asset ('css/style.css')}}">

</head>


{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}


        <div class="ftco-blocks-cover-1" style="background-color: #BFBBBB">
<br>
                <div style="margin-left: 300px" class="container">
                    <div style="margin-left: 200px">
                            <h1 class="text-cursive text-red">registration</h1>
                    </div>
                            <br>
                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">First Name</label>
                        <div>
                            {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">Last Name</label>
                        <div>
                            {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">Email</label>
                        <div>
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">Username</label>
                        <div>
                            {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">Role</label>
                        <div>
                            {{ form_widget(form.roles,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">Password</label>
                        <div>
                            {{ form_widget(form.Password,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="input-27" class="col-sm-2 col-form-label">Repeat Password</label>
                        <div>
                            {{ form_widget(form.plainPassword,{'attr':{'class':'form-control'}}) }}
                        </div>
                    </div>
                    <br>

                     <div style="margin-left: 200px">
                          <input class="btn btn-sm btn-primary btn-create" type="submit" value="{{ 'registration.submit'|trans }}" />
                     </div>
                    <br>

                </div>
            </div>

        {{ form_end(form) }}
{% endblock %}

<script src="{{ asset ('js/jquery-3.3.1.min.js')}}"></script>
<script src="{{ asset ('js/jquery-migrate-3.0.0.js')}}"></script>
<script src="{{ asset ('js/popper.min.js')}}"></script>
<script src="{{ asset ('js/bootstrap.min.js')}}"></script>
<script src="{{ asset ('js/owl.carousel.min.js')}}"></script>
<script src="{{ asset ('js/jquery.sticky.js')}}"></script>
<script src="{{ asset ('js/jquery.waypoints.min.js')}}"></script>
<script src="{{ asset ('js/jquery.animateNumber.min.js')}}"></script>
<script src="{{ asset ('js/jquery.fancybox.min.js')}}"></script>
<script src="{{ asset ('js/jquery.stellar.min.js')}}"></script>
<script src="{{ asset ('js/jquery.easing.1.3.js')}}"></script>
<script src="{{ asset ('js/bootstrap-datepicker.min.js')}}"></script>
<script src="{{ asset ('js/aos.js')}}"></script>

<script src="{{ asset ('js/main.js')}}"></script>

</html>

