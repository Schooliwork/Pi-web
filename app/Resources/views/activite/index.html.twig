    <input type="text" placeholder="&#xf002; Rechercher ..." class="form-control  col-3 offset-8 fa fa-search" name="search"id="myInput"  >

    <div class="card-body">
        <div class="table-responsive">
            <table id="default-datatable" class="table table-bordered dataTable" role="grid" aria-describedby="default-datatable_info">

            <thead>
            <tr>
                <th>Photo</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Time start</th>
                <th>Time end</th>
                <th>Categorie</th>
                <th>Annimator</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td><img src="/upload/images/{{ activite.photo }}" alt="pp" srcset=""></td>
                <td>{{ activite.nomActivite }}</td>
                <td>{% if activite.dateActivite %}{{ activite.dateActivite|date('Y-m-d') }}{% endif %}</td>
                <td>{% if activite.timeStart %}{{ activite.timeStart|date('H:i:s') }}{% endif %}</td>
                <td>{% if activite.timeEnd %}{{ activite.timeEnd|date('H:i:s') }}{% endif %}</td>
                <td>{{ activite.categorie }}</td>
                <td>{{ activite.animateur }}</td>
                <td>{{ activite.description }}</td>
                <td>
                    <ul>
                        <a class="mb-2 mr-2 btn btn-danger" href="{{ path('activite_delete', { 'id': activite.id }) }}">Delete</a>
                        <a class="mb-2 mr-2 btn btn-success" href="{{ path('activite_edit', { 'id': activite.id }) }}">Modify</a>
                        <a class="mb-2 mr-2 btn btn-gradient-purpink" href="{{ path('avis_index') }}">Avis</a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
