        {% if meeting is defined %}

                    <form action="{{ path('meeting_update', {'id' : meeting.id}) }}" method="POST" >
                        <div class="content-wrapper">
                            <div class="container-fluid">
                                <div class="card">
                                    <br>
                                    <p><a style="margin-left: 20px" href="{{ path ('meeting_read')}}" class="btn btn-dark">BACK</a></p>

