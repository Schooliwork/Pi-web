                                        <br>
                                        <br>

                                        <!-----emetteur----->
                                        <div class="form-group row">
                                            <label for="input-1" class="col-sm-2 col-form-label">Sender</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="emetteur" value="{{ meeting.emetteur }}" ><br />
                                            </div>
                                        </div>

                                        <!-----recepteur----->
                                        <div  class="form-group row">
                                            <label for="input-1" class="col-sm-2 col-form-label">Receiver</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="recepteur" value="{{ meeting.recepteur }}"  ><br />
                                            </div>
                                        </div>


                                        <!-----sujet----->
                                        <div  class="form-group row">
                                            <label for="input-1" class="col-sm-2 col-form-label">Subject</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="sujet"  value="{{ meeting.sujet }}"><br />
                                            </div>
                                        </div>

                                        <!-----description----->
                                        <div class="form-group row">
                                            <label for="input-1" class="col-sm-2 col-form-label">Message</label>
                                            <div class="col-sm-10">
