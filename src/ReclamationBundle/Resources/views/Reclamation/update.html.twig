</head>
<body>
<!---------------------------------------->
<br>
    {% block body %}

{% if reclamation is defined %}
    <form action="{{ path('reclamation_update', {'id' : reclamation.id}) }}" method="POST" >

    <p><a  href="{{ path ('reclamation_read')}}" class="btn btn-dark">BACK</a></p>


    <div style="background-color: peachpuff" class="container">
        <br>
        <h2 style="margin-left: 300px" class="col-sm-8">Update Reclamation</h2>
        <br>

                <!-----fullname----->
                            <div style="margin-left: 300px" class="form-group row">
                                <label for="input-1" class="col-sm-2 col-form-label">Full Name</label>
                                <div class="col-sm-10">
                           <input type="text" name="fullname" value="{{ reclamation.fullname }}" ><br />
                    </div>
                </div>

                <!-----email----->
                            <div style="margin-left: 300px" class="form-group row">
                                <label for="input-1" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                           <input type="email" name="sujet" value="{{ reclamation.email }}"  ><br />
                    </div>
                </div>


                <!-----phone----->

                <div style="margin-left: 300px"  class="form-group row">
                    <label for="input-27" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                           <input type="text" name="description"  value="{{ reclamation.phone }}"><br />
                    </div>
                </div>

                <!-----message----->
                <div style="margin-left: 300px" class="form-group row">
                                <label for="input-1" class="col-sm-2 col-form-label">Message</label>
                                <div class="col-sm-10">
                                <input type="textarea" name="description"  value="{{ reclamation.message }}"><br />
                    </div>
                </div>


                <!-----modifier----->
                <br>
                <div class="form-group row">
                    <div class="col-md-6 mr-auto">
                        <input style="margin-left: 500px" href="{{ path('reclamation_update' , { 'id': reclamation.id} ) }}) }}"  type="submit" class="btn btn-sm btn-primary btn-create" value="Save">
                    </div>
                </div>

<br>
            </div>


    </form>
{% endif %}
    {% endblock %}
