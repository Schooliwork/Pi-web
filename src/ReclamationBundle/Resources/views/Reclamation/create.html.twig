<!doctype html>
<html lang="en">

<head>
    <title>Schooli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="{{ asset ('https://fonts.googleapis.com/css?family=DM+Sans:300,400,700|Indie+Flower')}}" rel="stylesheet">


    <link rel="stylesheet" href="{{ asset ('fonts/icomoon/style.css')}}">

    <link rel="stylesheet" href="{{ asset ('css/bootstrap.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/bootstrap-datepicker.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/jquery.fancybox.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/owl.carousel.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/owl.theme.default.min.css')}}">
    <link rel="stylesheet" href="{{ asset ('fonts/flaticon/font/flaticon.css')}}">
    <link rel="stylesheet" href="{{ asset ('css/aos.css')}}">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="{{ asset ('css/style.css')}}">

</head>
<body>
<!---------------------------------------->
<br>
{% block body %}
    {{ form_start(recl) }}

<p><a style="margin-left: 20px" href="{{ path ('reclamation_read')}}" class="btn btn-dark">BACK</a></p>


<div style="background-color: peachpuff" class="container">
    <br>
    <h2 style="margin-left: 350px" class="col-sm-8">Send Us Your Reclamation</h2>
    <br>
                <div class="form-group row">
                    <label for="input-27" class="col-sm-2 col-form-label">Full Name</label>
                    <div class="col-sm-10">
                        {{ form_widget(recl.fullname,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input-27" class="col-sm-2 col-form-label">E-Mail</label>
                    <div class="col-sm-10">
                        {{ form_widget(recl.email,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="input-27" class="col-sm-2 col-form-label">Phone</label>
                    <div class="col-sm-10">
                        {{ form_widget(recl.phone,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>


                <div class="form-group row">
                    <label for="input-27" class="col-sm-2 col-form-label">Message</label>
                    <div class="col-sm-10">
                        {{ form_widget(recl.message,{'attr':{'class':'form-control'}}) }}
                    </div>
                </div>
    <br>

    <div class="container-contact100-form-btn" style="margin-left: 500px" >
						<span>
                             <button type="submit" class="btn btn-sm btn-primary btn-create"> Save</button>
                        </span>
    </div>
    <br>

</div>
    {{ form_end(recl) }}

{% endblock %}
<script src="{{ asset ('js/jquery-3.3.1.min.js')}}"></script>
<script src="{{ asset ('js/jquery-migrate-3.0.0.js')}}"></script>
<script src="{{ asset ('js/popper.min.js')}}"></script>
<script src="{{ asset ('js/bootstrap.min.js')}}"></script>
<script src="{{ asset ('js/owl.carousel.min.js')}}"></script>
